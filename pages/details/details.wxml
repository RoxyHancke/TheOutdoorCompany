   <!-- ********** swiper -->
   <swiper indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <block wx:for="{{activity.picture}}">
         <swiper-item>
            <image src="{{item}}" class="slide-image" width="200" height="400"/>
         </swiper-item>
      </block>
   </swiper>
   <!-- ********************************* swiper -->
   <view class="page-section">
      <view class="page_section">
         <scroll-view scroll-y="{{true}}" enable-flex="{{true}}" scroll-into-view="{{scrollInto}}" scroll-with-animation="{{true}}" style="height: 100rpx" class="list">
         </scroll-view>
         <view class="article_section">
            {{activity.tripStartDate}}
            <textarea class="article_section">{{activity.tripDes}}</textarea>
         </view>
         <view class="avatar_section">
            <image class="avatar" src="{{image}}"></image>
            <text>{{name}}</text>
            <view>
               TRIP DESCRIPTON
               <text>{{activity.tripDes}}</text>
            </view>
         </view>
         <textarea class="article">{{activity.tripDetail}}</textarea>
      </view>
      <view>
         <view>CONTACT INFORMATION</view>
         <view>Name: {{activity.tripOwner.id}}</view>
      </view>
      <view>
         LOCATION DETAILS
      </view>
   </view>
   <view class="buttons" style="">
      <button class="share-btn"> Share</button>
      <button class="register-btn"> Register</button>
   </view>
</view>
