/* pages/details/details.wxss */

.container {
  padding-bottom: 3.2em;
}

.swiper {
  height:400rpx;
  width: 750rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}


.avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  position: relative;
}


.background-image {
  background-size: cover;
  background-position: center;
  height: 180px;
  display: flex;
  align-items: flex-end;
  color: white;
  font-size: 24px;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  box-shadow: 0 0 15px rgba(0,0,0,0.2);
  padding: 20rpx;
  position: relative;
  position: bottom;
}


.tripStartDate{
    box-shadow: 0 0 2rpx rgba(0,0,0,0.2);
    display: flex;
    align-items: center; 
    justify-content: start;
    height: 80rpx;
    margin: 0 auto;
    padding: 20rpx;
    font-weight: bold;
  font-size: small;
    
}
.tripDes {
  box-shadow: 0 0 2rpx rgba(0,0,0,0.2);
  display: flex;
  align-items: center; 
  justify-content: start;
  height: 80rpx;
  margin: 0 auto;
  padding: 20rpx;
  font-weight: bold;
  font-size: small;
}

.attendees {
  box-shadow: 0 0 2rpx rgba(0,0,0,0.2);
  display: block;
  align-items: center; 
  justify-content: flex-start;
  height: 300rpx;
  margin: 0 auto;
  padding: 20rpx;
  font-weight: bold;
  font-size: small;
}

.tripDescription {
  font-weight: bold;
  font-size: small;
  padding: 0 0 15rpx 0;
 
}

.tripInfo {
  box-shadow: 0 0 2rpx rgba(0,0,0,0.2);
  align-items: center; 
  justify-content: start;
  margin: 0 auto;
  padding: 20rpx;
  height: 100%;
  font-size: small;
  text-align: start;
}

.contactInfo {
  box-shadow: 0 0 2rpx rgba(0,0,0,0.2);
  align-items: center; 
  justify-content: start;
  margin: 0 auto;
  padding: 20rpx;
  height: 120rpx;
  font-size: small;
  text-align: start;
}
.contact{
    font-weight: bold;
    font-size: small;
    padding: 0 0 15rpx 0;
   
}


.buttons {
  display: flex;
  align-items: flex-end;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color:white;
}

.share-btn {
  color: rgba(2, 2, 2, 0.815);
  padding: 5rpx 5rpx;
  border-radius: 5rpx;
  font-weight: normal;
  background: rgb(235,235, 235);
  width: 340rpx;
  margin: 0 auto;
  font-size: medium;
  
}

.register-btn {
  color: white;
  padding: 5rpx 5rpx;
  border-radius: 5rpx;
  font-weight: normal;
  background: #FB8500;
  width: 340rpx;
  margin: 0 auto;
  font-size: medium;

}

