/* pages/details/details.wxss */

.container {
  padding-bottom: 3.2em;
}

.swiper {
  height: 400rpx;
  width: 100%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}


.avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  position: relative;
}


.background-image {
  height: 100%;
  width: 100%;
  background-size: cover;
  background-position: center;
  color: white;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0,0,0,0.2);
  padding: 20rpx;
  box-sizing: border-box;
}


.tripStartDate{
    box-shadow: 0 0 2rpx rgba(0,0,0,0.2);
    display: flex;
    align-items: center; 
    justify-content: start;
    height: 80rpx;
    margin: 0 auto;
    padding: 20rpx;
    font-weight: bold;
  font-size: small;
    
}
.tripDes {
  box-shadow: 0 0 2rpx rgba(0,0,0,0.2);
  display: flex;
  align-items: center; 
  justify-content: start;
  height: 80rpx;
  margin: 0 auto;
  padding: 20rpx;
  font-weight: bold;
  font-size: small;
}

.attendees {
  box-shadow: 0 0 2rpx rgba(0,0,0,0.2);
  display: block;
  align-items: center; 
  justify-content: flex-start;
  height: 470rpx;
  margin: 0 auto;
  padding: 20rpx;
  font-weight: bold;
  font-size: small;
}

.tripDescription {
  font-weight: bold;
  font-size: small;
  padding: 0 0 15rpx 0;
 
}

.tripInfo {
  box-shadow: 0 0 2rpx rgba(0,0,0,0.2);
  align-items: center; 
  justify-content: start;
  margin: 0 auto;
  padding: 20rpx;
  height: 100%;
  font-size: small;
  text-align: start;
}

.contactInfo {
  box-shadow: 0 0 2rpx rgba(0,0,0,0.2);
  align-items: center; 
  justify-content: start;
  margin: 0 auto;
  padding: 20rpx;
  height: 200rpx;
  font-size: small;
  text-align: start;
}
.contact{
    font-weight: bold;
    font-size: small;
    padding: 0 0 15rpx 0;
   
}

.QRcode { 
  display: flex;
  display:flex-end;
  flex-direction: column;
  height: 350rpx;
  width: 300rpx;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
  width: 400rpx;
}


.buttons {
  width: 100%;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color:white;
  padding: 56rpx 0;
}

.share-btn {
  color: white;
  background: #219EBC;
  border-radius: 5rpx;
  width: 320rpx;
}

.register-btn {
  color: white;
  background: #FB8500;
  border-radius: 5rpx;
  width: 320rpx;
}

