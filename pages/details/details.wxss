/* pages/details/details.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.avatar_section{
margin-top:85rpx;
 padding: 30rpx;
}
.page__title{
margin-top: 30rpx;
padding: 20rpx;
display: block;
}
.title {
  font-size: medium;
  font-weight: bold;
  color: #219EBC;
  text-transform: uppercase;
}
.article_section{
  display:"flex";
  flex-direction: row;
  margin:5px;
  padding:0 10px;
  text-align:left;
  background-color:lightgray;
  height:2.3em;line-height:2.3em;

}
.tripDes {
  font-size: small;
  font-weight: normal;
  color: #023047;
  text-transform: capitalize;
}
input{
  padding: 10px 15px;
  background-color: #fff;
}
checkbox, radio{
  margin-right: 5px;
}

.btn-area{
  padding: 0 15px;
}
.btn-area button{
  margin-top: 10px;
  margin-bottom: 10px;
}

.page {
  min-height: 100%;
  flex: 1;
  background-color: #FBF9FE;
  font-size: 16px;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
  overflow: hidden;
}
.page__hd{
  padding: 40px;
}
.page__title{
  display: block;
  font-size: 20px;
}
.page__desc{
  margin-top: 5px;
  font-size: 14px;
  color: #888888;
}

.section{
  margin-bottom: 40px;
  display: block;
}
.section_gap{
  padding: 0 15px;
}
.section_title{
  /* margin-bottom: 8px; */
  padding-left: 15px;
  padding-right: 15px;
  font-size: medium;
  font-weight: bold;
  color: #219EBC;
  /* text-transform: uppercase; */
}

.section_details{
  /* margin-bottom: 8px; */
  padding-left: 15px;
  padding-right: 15px;
  font-size: medium;
  /* font-weight: bold; */
  /* color: #219EBC; */
  /* text-transform: uppercase; */
}





.section_gap .section__title{
  padding-left: 0;
  padding-right: 0;
}

.page-section-spacing{
  margin-top: 60rpx;
}
.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item{
  height: 300rpx;
}
.scroll-view-item_H{
  display: inline-block;
  width: 100%;
  height: 300rpx;
}
.share-btn {
  color: white;
  padding: 5rpx 5rpx;
  border-radius: 5rpx;
  font-weight: bold;
  background: #8ECAE6;
  transition:  0.3s ease;
  width: 150rpx;
  margin: 0 auto;
}
.item{
  border: solid;
}

.register-btn {
  color: white;
  padding: 5rpx 5rpx;
  border-radius: 5rpx;
  font-weight: bold;
  background: #FB8500;
  transition:  0.3s ease;
  width: 100rpx;
  margin: 0 auto;
}
.page_bottom {
    display: flex;
    align-items: flex-end;
    position: fixed;
    bottom: 0;
    width: 100%;

}

