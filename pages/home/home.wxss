/* pages/home/home.wxss */
.buttons {
  display: flex;
  align-items: flex-end;
}

.share-btn {
  color: white;
  padding: 5rpx 5rpx;
  border-radius: 5rpx;
  font-weight: bold;
  background: #8ECAE6;
  transition:  0.3s ease;
  width: 340rpx;
  margin: 0 auto;
}
.item{
  border: solid;
}

.register-btn {
  color: white;
  padding: 5rpx 5rpx;
  border-radius: 5rpx;
  font-weight: bold;
  background: #FB8500;
  transition:  0.3s ease;
  width: 340rpx;
  margin: 0 auto;
}

container {
  height: 100%;
  display: flex;
  justify-content: center;
  border-radius: 5rpx;
  box-shadow: 0 0 15rpx rgba(0,0,0,0.2);
} 

.drop-down-card {
  background-size: cover;
  height: 80rpx;
  width: 100%;
  justify-content: center;
  display: flex;
  align-items: center;
  color: #023047;
  border-radius: 12rpx;
  border: 1rpx solid rgb(241, 238, 238);
}

.big-card {
  background-size: cover;
  height: 200rpx;
  width: 100%;
  justify-content: center;
  align-items: center;
  color: #023047;
  border-radius: 12rpx;
  border: 1rpx solid rgb(241, 238, 238);

}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}



  